<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_to_demo_activity"
        style="@style/btn_launch"
        android:text="@string/to_demo_activity"/>

    <Button
        android:id="@+id/btn_to_demo_fragment"
        style="@style/btn_launch"
        android:layout_marginTop="30dp"
        android:text="@string/to_demo_fragment"/>

    <Button
        android:id="@+id/btn_show_demo_dialog_fragment"
        style="@style/btn_launch"
        android:layout_marginTop="30dp"
        android:text="@string/show_demo_dialog_fragment"/>

    <Button
        android:id="@+id/btn_to_web"
        style="@style/btn_launch"
        android:layout_marginTop="30dp"
        android:text="@string/to_web"/>

</LinearLayout>